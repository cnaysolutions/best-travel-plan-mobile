{
  "expo": {
    "name": "Best Holiday Plan",
    "slug": "best-travel-plan-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "scheme": "besttravelplan",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1E2A36"
    },
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.cnaysolutions.besttravelplan",
      "infoPlist": {
        "NSCameraUsageDescription": "Not required",
        "NSLocationWhenInUseUsageDescription": "Not required"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#1E2A36"
      },
      "package": "com.cnaysolutions.besttravelplan",
      "permissions": []
    },
    "plugins": [
      "expo-router",
      [
        "expo-build-properties",
        {
          "android": {
            "compileSdkVersion": 35,
            "targetSdkVersion": 35,
            "buildToolsVersion": "35.0.0"
          },
          "ios": {
            "deploymentTarget": "15.1"
          }
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
